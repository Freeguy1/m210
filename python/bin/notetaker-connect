#!/usr/bin/python
# -*- coding: utf-8 -*-

# Standard modules.
import optparse
import sys

# Third-party modules.
import dbus

# Project modules.
import linux
import notetaker

def parse_args():
    parser = optparse.OptionParser(version='''%s 0.1
Copyright (C) 2010 Tuomas (tuos) R채s채nen <tuos@codegrove.org>
License GPLv3+: GNU GPL version 3 or later <http://gnu.org/licenses/gpl.html>.
This is free software: you are free to change and redistribute it.
There is NO WARRANTY, to the extent permitted by law.

Written by Tuomas R채s채nen.''' % (linux.PROGRAM_INVOCATION_SHORT_NAME),
                                   usage='%prog [OPTION]... SYSFS_PATH',
                                   description='Requests notetakerd to connect a device pointed by sysfs path.')
    parser.add_option("--list", "", action="store_true",
                      help="List all disconnected devices and exit.")
    parser.add_option("--all", "", action="store_true",
                      help="Connect all disconnected devices.")
    return parser.parse_args(sys.argv)

if __name__ == "__main__":
    options, args = parse_args()

    bus = dbus.SystemBus()
    remote_object = bus.get_object('org.codegrove.notetaker',
                                   '/org/codegrove/notetaker/daemon')
    iface = dbus.Interface(remote_object, 'org.codegrove.notetaker.daemon')

    if options.list:
        connections = iface.connections()
        for dirpath in notetaker.find_m210_dirpaths():
            if dirpath not in connections:
                print dirpath
        sys.exit(0)

    if options.all:
        connections = iface.connections()
        for dirpath in notetaker.find_m210_dirpaths():
            if dirpath not in connections:
                iface.connect(dirpath)
        sys.exit(0)

    iface.connect(args[1])
