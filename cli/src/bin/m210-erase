#!/usr/bin/python
# -*- coding: utf-8 -*-

# Standard modules.
import sys

# Third-party modules.
import dbus.exceptions

# Project modules.
import m210.cli
import m210.optparse

USAGE = '%prog [OPTION]... [DEVPATH]...'
DESCRIPTION = 'Erase notes from connected devices.'

def is_confirmed():
    while True:
        answer = raw_input("Really erase [y/n]? ")
        if answer == 'y':
            return True
        elif answer == 'n':
            print "Aborted."
            return False
        else:
            print "Please answer y or n."

if __name__ == "__main__":
    parser = m210.optparse.OptionParser(usage=USAGE, description=DESCRIPTION)

    parser.add_option("--no-confirmation", "", action="store_false",
                      dest="ask_confirmation", default=True,
                      help="do not ask confirmation")
    parser.add_option("--all", "", action="store_true",
                      help="erase all connected devices")

    options, args = parser.parse_args(sys.argv)

    daemon = m210.cli.get_interface_or_exit()

    devpaths = args[1:]
    if not devpaths:
        devpaths = daemon.devpaths()[-1:]

    for devpath in devpaths:
        print devpath
        if options.ask_confirmation:
            if not is_confirmed():
                continue
        try:
            daemon.delete_notes(devpath)
        except dbus.exceptions.DBusException, e:
            if e.get_dbus_name() == "org.freedesktop.DBus.Python.m210.daemon.NotConnectedError":
                m210.cli.error_and_exit("%s is not connected" % devpath)
            raise e
