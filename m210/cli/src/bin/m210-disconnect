#!/usr/bin/python
# -*- coding: utf-8 -*-

# Standard modules.
import sys

# Third-party modules.
import dbus.exceptions

# Project modules.
import m210.cli
import m210.optparse

USAGE = '%prog [OPTION]... [DEVPATH]...'
DESCRIPTION = 'Disconnect devices from the m210-daemon.'

if __name__ == "__main__":
    parser = m210.optparse.OptionParser(usage=USAGE, description=DESCRIPTION)

    parser.add_option("--verbose", "", action="store_true", default=False,
                      help="print processing messages")
    parser.add_option("--all", "", action="store_true",
                      help="disconnect all connected devices")

    options, args = parser.parse_args(sys.argv)

    daemon = m210.cli.get_interface_or_exit()

    if options.all:
        for devpath in daemon.disconnect_all():
            if options.verbose:
                print "D", devpath
        sys.exit(0)

    devpaths = args[1:]
    if not devpaths:
        devpaths = daemon.devpaths()[-1:]
        
    for devpath in devpaths:
        try:
            daemon.disconnect(devpath)
        except dbus.exceptions.DBusException, e:
            if e.get_dbus_name() == "org.freedesktop.DBus.Python.m210.daemon.NotConnectedError":
                m210.cli.error_and_exit("%s is not connected" % devpath)
            raise e           

        if options.verbose:
            print "D", devpath
