#!/usr/bin/python
# -*- coding: utf-8 -*-

# Standard modules.
import sys

# Project modules.
import noter.optparse
import noter.daemon

USAGE = '%prog [OPTION]... [DEVPATH]...'
DESCRIPTION = 'Connect devices to the noter-daemon.'

if __name__ == "__main__":
    parser = noter.optparse.OptionParser(usage=USAGE, description=DESCRIPTION)

    parser.add_option("--verbose", "", action="store_true", default=False,
                      help="print processing messages")
    parser.add_option("--all", "", action="store_true",
                      help="connect all disconnected devices")

    options, args = parser.parse_args(sys.argv)

    daemon = noter.daemon.Interface()

    if options.all:
        for dirpath in daemon.disconnected_devpaths():
            daemon.connect(dirpath)
        sys.exit(0)

    devpaths = args[1:]
    if not devpaths:
        devpaths.append("")

    for devpath in devpaths:
        devpath = daemon.connect(devpath)
        if options.verbose:
            print "C", devpath
