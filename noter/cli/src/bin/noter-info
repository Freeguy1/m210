#!/usr/bin/python
# -*- coding: utf-8 -*-

# Standard modules.
import os.path
import sys

# Project modules.
import noter.core
import noter.daemon

USAGE = '%prog [OPTION]... [DEVPATH]...'
DESCRIPTION = 'Print information about connected devices.'

if __name__ == "__main__":
    parser = noter.core.OptionParser(usage=USAGE, description=DESCRIPTION)

    parser.add_option("--all", "", action="store_true",
                      help="print info about all connected devices")

    options, args = parser.parse_args(sys.argv)

    daemon = noter.daemon.Interface()

    def print_info(devpath):
        print devpath
        for key, value in daemon.get_info(devpath).items():
            print " ", key.replace("_", " ").capitalize() + ":", value
    
    if options.all:
        for devpath in daemon.connected_devpaths():
            print_info(devpath)
        sys.exit(0)
        
    devpaths = args[1:]
    if not devpaths:
        devpaths.append(daemon.connected_devpaths()[0])

    for devpath in devpaths:
        print_info(devpath)
